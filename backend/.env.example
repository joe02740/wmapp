# Environment variables for WM Helper Backend
# Copy this file to .env and fill in your actual values

# Database Configuration
# Option 1: Use a full DATABASE_URL (recommended for production)
DATABASE_URL=postgresql://username:password@host:port/database_name

# Option 2: Use individual database variables (alternative to DATABASE_URL)
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=wmhelper
# DB_USER=postgres
# DB_PASSWORD=your_password

# Anthropic API Key (required)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Stripe Configuration (required for payments)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_PRICE_ID_PAID=price_your_price_id_for_paid_tier

# Flask Configuration
FLASK_ENV=development
PORT=5000

# Optional: Database path (legacy, not used with PostgreSQL)
# DB_PATH=wm_helper.db
